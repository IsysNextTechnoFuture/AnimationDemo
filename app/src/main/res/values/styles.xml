<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@animator/slide_up</item>
        <item name="android:windowExitAnimation">@animator/slide_bottom</item>
    </style>

   <!-- <style name="SerachDialogAnimation">
        <item name="android:windowEnterAnimation">@animator/slide_up</item>
        <item name="android:windowExitAnimation">@animator/slide_bottom</item>
    </style>-->

    <style name="SerachDialog">
        <item name="android:windowAnimationStyle">@style/SearchDialogAnimation</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <style name="SearchDialogAnimation">

        <item name="android:windowEnterAnimation">@animator/slide_down</item>
        <item name="android:windowExitAnimation">@animator/slide_top</item>

    </style>
</resources>
